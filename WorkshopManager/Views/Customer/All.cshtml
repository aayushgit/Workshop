@model WorkshopManager.Models.ViewModels.AllCustomersViewModel
@{
    ViewBag.Title = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Customers</h2>
<a class="btn btn-primary" href="New">New Customer</a>
<form class="form-group"></form>
<table class="table table-responsive table-hover">
    <tr>
        <th>Customer</th>
        <th></th>
    </tr>

    @foreach (var customer in Model.Customer)
    {
        <tr>
            <td><a href="Details/@customer.Id.ToString()">@customer.Name</a></td>
            <td><a href="Edit/@customer.Id.ToString()">Edit</a></td>
        </tr>
                                                
    }

</table>

